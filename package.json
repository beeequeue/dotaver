{
  "name": "dotaver",
  "type": "module",
  "description": "Semver but for Dota 2 patch versions",
  "version": "2.0.1",
  "author": "BeeeQueue <adam@haglund.dev>",
  "repository": {
    "type": "git",
    "url": "https://github.com/beeequeue/dotaver.git"
  },
  "keywords": [
    "dota",
    "dota2",
    "semver",
    "version",
    "patch",
    "number"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=22.19"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.mjs",
  "exports": "./dist/index.mjs",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,json5,yaml,yml,css,scss,md}": [
      "prettier --experimental-cli --write"
    ]
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "lint": "eslint src",
    "lint:publint": "publint",
    "test": "vitest",
    "typecheck": "tsgo",
    "prepare": "simple-git-hooks",
    "release": "pnpm build && pnpm changeset publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.4.2",
    "@changesets/changelog-github": "1.0.0-next.1",
    "@changesets/cli": "3.0.0-next.1",
    "@tsconfig/node22": "22.0.5",
    "@tsconfig/strictest": "2.0.8",
    "@typescript/native-preview": "7.0.0-dev.20251206.1",
    "@vitest/coverage-v8": "4.0.15",
    "eslint": "9.39.1",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "publint": "0.3.15",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.17.0",
    "vitest": "4.0.15"
  }
}
