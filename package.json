{
  "name": "dotaver",
  "type": "module",
  "description": "Semver but for Dota 2 patch versions",
  "version": "1.0.1",
  "author": "BeeeQueue <adam@haglund.dev>",
  "keywords": [
    "dota",
    "dota2",
    "semver",
    "version",
    "patch",
    "number"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=22.19"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.mjs",
  "exports": "./dist/index.mjs",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,json5,yaml,yml,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "lint": "eslint src",
    "test": "vitest",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "prepare": "simple-git-hooks",
    "release": "pnpm build && pnpm changeset publish"
  },
  "devDependencies": {
    "@beequeue/eslint-plugin": "0.8.0",
    "@changesets/changelog-github": "1.0.0-next.0",
    "@changesets/cli": "3.0.0-next.0",
    "@tsconfig/node22": "22.0.2",
    "@tsconfig/strictest": "2.0.6",
    "@vitest/coverage-v8": "4.0.0-beta.18",
    "eslint": "8.39.0",
    "lint-staged": "16.2.4",
    "prettier": "2.8.8",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.15.9",
    "vitest": "4.0.0-beta.18"
  }
}
